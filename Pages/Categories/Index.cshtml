@page
@model Razor_Pages_ASPNET_Core_NET_6.Pages.Categories.IndexModel



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            @*<a asp-page="Create" class="btn btn-primary">Create</a>*@
            <h2 class="text">Category List </h2>
        </div>
        @*  <div class="col-6">
            <a href="/categories/create" class="btn btn-primary float-right">Create New Category</a>
            </div>*@

        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary ">
                <i class="bi bi-pencil-square"></i>
            &nbsp;    Create New Category 
            </a>
        </div>
    </div>


    <br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody class="">
            @foreach (var obj in Model.Categories)
            {
                <tr>
                    <td>@obj.Name </td>
                    <td>@obj.DisplayOrder </td>
                    <td>
                        
                        @Html.ActionLink("Delete", "OnPostDelete", new { id = obj.ID }, new { @class = "btn btn-danger" })
                        
                   @* <a  asp-page="delete" id="@obj.ID" class="btn btn-danger">Delete</a>
                    <a asp-page="edit" id="@obj.ID" class="btn btn-primary">Edit</a>*@
                    </td>
                </tr>
            }

        </tbody>
    </table>




</div>